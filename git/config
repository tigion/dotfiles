# vim: set filetype=gitconfig:

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = "~/.config/git/ignore"
  editor = nvim
  filemode = false
  pager = delta
[diff]
  colorMoved = default
[init]
  defaultBranch = main
[interactive]
  diffFilter = delta --color-only --features=interactive
[merge]
  conflictstyle = diff3
[mergetool]
  keepBackup = true
[pack]
  threads = 0
[pull]
  rebase = true

[delta]
  line-numbers = true
  keep-plus-minus-markers = true
  hunk-header-decoration-style = omit
  zero-style = dim syntax
[delta "interactive"]
  keep-plus-minus-markers = false

