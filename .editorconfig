# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
# indent_style = space
# indent_size = 2

# lua
# - StyLua options in .stylua.toml
# - editorconfig: https://github.com/CppCXY/EmmyLuaCodeStyle
[*.lua]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.sh]
indent_style = space
indent_size = 2
switch_case_indent = true
[bin/**]
indent_style = space
indent_size = 2
switch_case_indent = true

[*.md]
insert_final_newline = true
# trim_trailing_whitespace = false
